#!/bin/bash

# Пройтись по всем подкаталогам, содержащим .git
find . -type d -name ".git" | while read gitdir
do
    repo_dir=$(dirname "$gitdir")
    cd "$repo_dir" || continue

    # Получить дату последнего коммита
    last_commit_date=$(git log -1 --format="%ci")

    echo "📁 $repo_dir → 🕒 Последний коммит: $last_commit_date"

    cd - > /dev/null
done
